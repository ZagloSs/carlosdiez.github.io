---
import "../styles/card.css"
const {link} = Astro.props
const {img} = Astro.props
const {title} = Astro.props
const {timeSpent} = Astro.props
const {bio} = Astro.props
const {tsName} = Astro.props
---

<a href={link}>
    <div class="card">
        <div class="img">
            <img src={img} alt="#" transition:name={tsName}>
        </div>
        
    
        <div class="title-time">
            <h1>{title}</h1>
            <p>{timeSpent}</p>
        </div>
        <p>{bio}</p>
    </div>
</a>