---
import ProyectLayout from "../layouts/LayoutForProject.astro" 
import ProjectCard from "../components/projectCard.astro"
import { proyectos } from "../data/projects"
import Header from '../components/Header.astro';

import "../styles/projects.css"

---

<ProyectLayout title = "Projects">
    <Header/>
    <div class="page">
        <div class="project-container">
            {
                proyectos.map((proyecto)=> (
                    <ProjectCard 
                    link={proyecto.link} 
                    img = {proyecto.img} 
                    title = {proyecto.title} 
                    timeSpent = {proyecto.timeSpent}
                    bio = {proyecto.bio}
                    tsName = {proyecto.tsName}
                   />
                ))
            }
        </div>
    </div>

</ProyectLayout>

